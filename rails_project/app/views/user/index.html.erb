<%= render "layouts/nav" %>

<div class="text-center mt-5 padding-sm">
        <% if @alert!=nil %>
                <div class='alert-fixed'>
                        <div class="alert alert-success fade show" role="alert">
                                <%= @alert %>
                                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                        </button>

                        </div>
                </div>
        <% end %>
        <%= image_tag("signr logo.svg", :alt => "google", style:'height:110px;width:110px;', class:'mb-4') %>
        <h1 class=" mb-4 font-weight-normal">Welcome Back!
        <br />
        <%= @user.username %>
         </h1>
        <p class="mb-1 font-weight-normal">Tap here to start a conversation</p>
        <%= button_to 'Record', new_recording_path , method: "get",class:"btn btn-lg btn-block width-max", style:"background-color:#ee6c4d" =%>
        <p class="mt-4 mb-1 font-weight-normal"> Tap here to review your past conversations</p>
        <%= button_to 'View Past Recordings', recording_index_path , method: "get",class:"btn btn-lg btn-block width-max",style:'background-color:#e0fbfc'  =%>
</div>