<%= render "layouts/nav" %>
<div class='position-relative'>
  <div class='padding-sm'>
    <%= form_for @recording, class:"form-group" do |f| %>
      <%= f.label :title, for:"title",id:"title"%><br>
      <%= f.text_field :title,class:"form-control"%>
    <small id="title-help" class="form-text text-muted">Click on the title above to edit!</small>
  </div>
  <% if !!@recording.video_file.attached? %>
    <div class='padding-sm'>
      <%= video_tag url_for(@recording.video_file), controls:true, id: "video_player" %>
    </div>
  <% end %>
  <div class='padding-sm'>

  <p>
    <%= f.label :transcription, for:"transcription" %><br>
    <%= f.text_area :transcription,class:"form-control transcription-box",id:"transcription" %>
    <small id="transcription-help" class="form-text text-muted">Edit the transcription in the box as needed</small>
  </p> </div>
  <div class='padding-sm'>
  <%= f.submit class:"btn btn-primary btn-lg btn-block margin-top-md width-max"%>
  </div>
  <% end %>
    <div class='padding-sm margin-top-negative'>
      <%= button_to  'destroy',
      @recording,
      {
        :method=>:delete,
        class:"btn btn-danger btn-lg btn-block margin-top-md width-max", 
        data: { 
          confirm: 'Are you certain you want to delete this?' 
          }
        } 
      %>
  </div>

</div>
